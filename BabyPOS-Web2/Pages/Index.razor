@page "/"
@inject NavigationManager Navigation

<PageTitle>BabyPOS Web2</PageTitle>

<div class="container text-center py-5">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Redirecting...</span>
    </div>
    <p class="mt-3">กำลังเปลี่ยนเส้นทางไปหน้าร้านค้า...</p>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Console.WriteLine("🔄 Index page loaded - redirecting to /shops");
            // Redirect ไปหน้า Shops ทันทีที่โหลดหน้า
            Navigation.NavigateTo("/shops", forceLoad: true);
        }
        await base.OnAfterRenderAsync(firstRender);
    }
}
